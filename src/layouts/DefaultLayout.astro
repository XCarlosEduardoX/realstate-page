---
import "@astrojs/tailwind/base.css";
import SiteMeta from "../components/SiteMeta.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

const {
  title = "RealState",
  description = "Este es un proyecto de prueba para la clase de astro",
  url,
  image = "/social-preview-image.png",
  author = "Carlos Soto",
} = Astro.props;
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />

    <SiteMeta
      title={title}
      description={description.substring(0, 100)}
      url={Astro.site
        ? `${Astro.site}/${title.toLowerCase().replaceAll(" ", "-")}`
        : `https://accessible-astro.dev/${title.toLowerCase().replaceAll(" ", "-")}`}
      image={image}
      author={author}
    />
  </head>
  <body>
    <!-- <Header /> -->
    <Navbar />
    <main id="main-content" transition:animate="fade">
      <slot />
    </main>
    <!-- <Footer /> -->
    <Footer />
    <style is:global>
      @font-face {
        font-family: "Inter";
        src:
          url("/fonts/Inter/static/Inter-VariableFont_slnt,wght.ttf")
            format("truetype"),
          url("/fonts/Inter/static/Inter-Black.ttf") format("truetype"),
          url("/fonts/Inter/static/Inter-Bold.ttf") format("truetype"),
          url("/fonts/Inter/static/Inter-ExtraBold.ttf") format("truetype"),
          url("/fonts/Inter/static/Inter-ExtraLight.ttf") format("truetype"),
          url("/fonts/Inter/static/Inter-Light.ttf") format("truetype"),
          url("/fonts/Inter/static/Inter-Medium.ttf") format("truetype"),
          url("/fonts/Inter/static/Inter-Regular.ttf") format("truetype"),
          url("/fonts/Inter/static/Inter-SemiBold.ttf") format("truetype"),
          url("/fonts/Inter/static/Inter-Thin.ttf") format("truetype");
        font-weight: 300;
      }
      :root {
        --color-primary: #58144f;
        --color-secondary: #94a3b8;
        --color-tertiary: #ffffff83;
        --bg: #0f172a;
      }

      .subtitle {
        color: var(--color-secondary);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Inter", sans-serif;

        color: white;
        background-color: var(--bg);
      }

      .text-up-title {
        line-height: 1.2;
        font-size: 35px;
        font-weight: bold !important;
        margin-bottom: 1.2rem;
        background: linear-gradient(90deg, #9d6ff8, #58144f);
        -webkit-background-clip: text;
        color: transparent;
      }
      .title {
        margin-bottom: 1rem;
        position: relative;
        font-weight: 800;
        font-size: 2.25rem;
        line-height: 1.1;
        letter-spacing: -0.017em;
        background: linear-gradient(90deg, #b1b4c4, #8b8e99);
        -webkit-background-clip: text;
        color: transparent;
      }
      .description {
        font-size: 1.125rem;
        margin-bottom: 0.9rem;
        font-size: 16px;
        font-weight: 400;
        line-height: 1.7;
        color: var(--color-secondary);
      }

      @media (max-width: 640px) {
        .title {
          font-size: 2.75rem;
        }
      }
    </style>
  </body>
</html>
